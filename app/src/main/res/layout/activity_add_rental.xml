<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/login_bg_4"
    android:padding="16dp">

    <!-- Scrollable Form Area -->
    <LinearLayout
        android:id="@+id/formContainer"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/footerButtons"
        android:layout_alignParentTop="true">

        <!-- Title -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginTop="4dp">

            <TextView
                android:id="@+id/textTitle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/title_add_rental"
                android:textSize="30sp"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="10dp"
                android:textStyle="bold"
                android:textColor="#FFFFFF"
                android:gravity="center" />
        </LinearLayout>

        <!-- ScrollView -->
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@color/gmp_ref_palette_neutral_transparent"
                android:padding="16dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:background="@drawable/rounded_container"
                    android:padding="16dp"
                    android:layout_marginHorizontal="12dp">

                    <!-- All Input Fields -->
                    <Spinner
                        android:id="@+id/spinnerCategory"
                        android:layout_width="match_parent"
                        android:layout_height="48dp"
                        android:layout_marginTop="8dp"
                        android:background="@drawable/edittext_bg"
                        android:paddingStart="12dp"
                        android:paddingEnd="12dp" />

                    <Spinner
                        android:id="@+id/spinnerItemName"
                        android:layout_width="match_parent"
                        android:layout_height="48dp"
                        android:layout_marginTop="8dp"
                        android:background="@drawable/edittext_bg"
                        android:paddingStart="12dp"
                        android:paddingEnd="12dp" />

                    <EditText
                        android:id="@+id/editRenterFName"
                        android:layout_width="match_parent"
                        android:layout_height="48dp"
                        android:hint="@string/hint_renter_first_name"
                        android:inputType="textPersonName"
                        android:autofillHints="name"
                        android:background="@drawable/edittext_bg"
                        android:layout_marginTop="8dp"
                        android:paddingHorizontal="12dp" />

                    <EditText
                        android:id="@+id/editRenterLName"
                        android:layout_width="match_parent"
                        android:layout_height="48dp"
                        android:hint="@string/hint_renter_last_name"
                        android:inputType="textPersonName"
                        android:autofillHints="name"
                        android:background="@drawable/edittext_bg"
                        android:layout_marginTop="8dp"
                        android:paddingHorizontal="12dp" />

                    <EditText
                        android:id="@+id/editRentalDate"
                        android:layout_width="match_parent"
                        android:layout_height="48dp"
                        android:hint="@string/hint_rental_date"
                        android:focusable="true"
                        android:focusableInTouchMode="false"
                        android:clickable="true"
                        android:inputType="date"
                        android:autofillHints="none"
                        android:background="@drawable/edittext_bg"
                        android:layout_marginTop="8dp"
                        android:paddingHorizontal="12dp" />

                    <EditText
                        android:id="@+id/editReturnDate"
                        android:layout_width="match_parent"
                        android:layout_height="48dp"
                        android:hint="@string/hint_return_date"
                        android:focusable="true"
                        android:focusableInTouchMode="false"
                        android:clickable="true"
                        android:inputType="date"
                        android:autofillHints="none"
                        android:background="@drawable/edittext_bg"
                        android:layout_marginTop="8dp"
                        android:paddingHorizontal="12dp" />

                    <EditText
                        android:id="@+id/editPrice"
                        android:layout_width="match_parent"
                        android:layout_height="48dp"
                        android:hint="@string/hint_price"
                        android:inputType="numberDecimal"
                        android:autofillHints="none"
                        android:background="@drawable/edittext_bg"
                        android:layout_marginTop="8dp"
                        android:paddingHorizontal="12dp" />

                    <AutoCompleteTextView
                        android:id="@+id/editAddress"
                        android:layout_width="match_parent"
                        android:layout_height="48dp"
                        android:hint="@string/hint_address"
                        android:inputType="textPostalAddress"
                        android:autofillHints="postalAddress"
                        android:background="@drawable/edittext_bg"
                        android:layout_marginTop="8dp"
                        android:paddingHorizontal="12dp" />

                    <Spinner
                        android:id="@+id/spinnerStatus"
                        android:layout_width="match_parent"
                        android:layout_height="48dp"
                        android:layout_marginTop="8dp"
                        android:background="@drawable/edittext_bg"
                        android:paddingStart="12dp"
                        android:paddingEnd="12dp" />

                    <EditText
                        android:id="@+id/editNotes"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="@string/hint_notes"
                        android:minLines="3"
                        android:gravity="top"
                        android:inputType="textMultiLine"
                        android:autofillHints="none"
                        android:minHeight="48dp"
                        android:background="@drawable/edittext_bg"
                        android:layout_marginTop="8dp"
                        android:padding="12dp" />
                </LinearLayout>
            </LinearLayout>
        </ScrollView>
    </LinearLayout>

    <!-- sticky buttons -->
    <LinearLayout
        android:id="@+id/footerButtons"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_alignParentBottom="true"
        android:paddingTop="8dp"
        android:paddingBottom="12dp"
        android:paddingHorizontal="12dp"
        android:background="@android:color/transparent"
        style="?android:attr/buttonBarStyle">

        <Button
            android:id="@+id/buttonBack"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_weight="1"
            android:text="@string/button_back"
            android:backgroundTint="#FFFFFF"
            android:textColor="#e2ac02"
            style="?android:attr/buttonBarButtonStyle" />

        <Button
            android:id="@+id/buttonSaveRental"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_weight="1"
            android:text="@string/button_save_rental"
            android:backgroundTint="#e2ac02"
            android:textColor="#FFFFFF"
            android:layout_marginStart="8dp"
            style="?android:attr/buttonBarButtonStyle" />
    </LinearLayout>
</RelativeLayout>
