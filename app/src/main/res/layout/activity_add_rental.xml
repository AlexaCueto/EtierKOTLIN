<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="#ffffff">

    <TextView
        android:id="@+id/textTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/title_add_rental"
        android:textSize="24sp"
        android:textStyle="bold"
        android:gravity="center"
        android:layout_marginBottom="16dp" />

    <EditText
        android:id="@+id/editItemName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/hint_item_name"
        android:inputType="textPersonName"
        android:autofillHints="name"
        android:minHeight="48dp"
        android:paddingTop="12dp"
        android:paddingBottom="12dp" />

    <Spinner
        android:id="@+id/spinnerCategory"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:paddingStart="8dp"
        android:paddingEnd="8dp"
        android:layout_marginTop="8dp" />

    <EditText
        android:id="@+id/editRenterFName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/hint_renter_first_name"
        android:inputType="textPersonName"
        android:autofillHints="givenName"
        android:minHeight="48dp"
        android:paddingTop="12dp"
        android:paddingBottom="12dp"
        android:layout_marginTop="8dp" />

    <EditText
        android:id="@+id/editRenterLName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/hint_renter_last_name"
        android:inputType="textPersonName"
        android:autofillHints="familyName"
        android:minHeight="48dp"
        android:paddingTop="12dp"
        android:paddingBottom="12dp"
        android:layout_marginTop="8dp" />

    <EditText
        android:id="@+id/editRentalDate"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:hint="@string/hint_rental_date"
        android:focusable="true"
        android:focusableInTouchMode="false"
        android:clickable="true"
        android:inputType="date"
        android:autofillHints="username"
        android:layout_marginTop="8dp"
        android:paddingStart="8dp"
        android:paddingEnd="8dp" />

    <EditText
        android:id="@+id/editReturnDate"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:hint="@string/hint_return_date"
        android:focusable="true"
        android:focusableInTouchMode="false"
        android:clickable="true"
        android:inputType="date"
        android:autofillHints="username"
        android:layout_marginTop="8dp"
        android:paddingStart="8dp"
        android:paddingEnd="8dp" />

    <EditText
        android:id="@+id/editPrice"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/hint_price"
        android:inputType="numberDecimal"
        android:autofillHints="postalCode"
        android:minHeight="48dp"
        android:paddingTop="12dp"
        android:paddingBottom="12dp"
        android:layout_marginTop="8dp" />

    <Spinner
        android:id="@+id/spinnerStatus"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:paddingStart="8dp"
        android:paddingEnd="8dp"
        android:layout_marginTop="8dp" />

    <EditText
        android:id="@+id/editNotes"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/hint_notes"
        android:minLines="3"
        android:gravity="top"
        android:inputType="textMultiLine"
        android:autofillHints="notes"
        android:minHeight="48dp"
        android:paddingTop="12dp"
        android:paddingBottom="12dp"
        android:layout_marginTop="8dp" />

    <Button
        android:id="@+id/buttonSaveRental"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:text="@string/button_save_rental"
        android:paddingTop="8dp"
        android:paddingBottom="8dp"
        android:layout_marginTop="16dp" />

</LinearLayout>
