<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/login_bg_4"
    tools:context=".MainActivity">

    <!-- toolbar -->
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/mainToolBar"
        android:layout_width="0dp"
        android:layout_height="?attr/actionBarSize"
        android:background="#E2AC02"
        android:contentInsetStart="0dp"
        android:contentInsetLeft="0dp"
        android:contentInsetStartWithNavigation="0dp"
        android:padding="0dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
        app:title="Etier Admin"
        app:titleTextAppearance="@style/ToolbarTitleBold"
        app:titleTextColor="@android:color/white" />

    <!-- logo -->

    <!-- tagline -->

    <!-- welcome title -->
    <ImageView
        android:id="@+id/MainLogo"
        android:layout_width="250dp"
        android:layout_height="100dp"
        android:layout_marginTop="96dp"
        android:importantForAccessibility="no"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.503"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/etier_white_logo_transparent" />

    <!-- main button container -->
    <TextView
        android:id="@+id/textViewWelcomeMessage"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="4dp"
        android:fontFamily="@font/proximanova_regular"
        android:letterSpacing="0.02"
        android:text="Where Women Wear Confidence"
        android:textAlignment="center"
        android:textColor="#FBF4F4"
        android:textSize="18sp"
        android:textStyle="italic"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/MainLogo" />

    <TextView
        android:id="@+id/textViewWelcome"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:fontFamily="@font/proximanova_regular"
        android:letterSpacing="0.02"
        android:text="Admin Dashboard"
        android:textAlignment="center"
        android:textColor="#FFFFFF"
        android:textSize="30sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/textViewWelcomeMessage" />

    <LinearLayout
        android:id="@+id/buttonContainer"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:orientation="vertical"
        android:padding="24dp"
        android:background="@drawable/rounded_container"
        android:elevation="6dp"
        app:layout_constraintTop_toBottomOf="@id/textViewWelcome"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- unified styled buttons -->
        <Button
            android:id="@+id/buttonAddRental"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:backgroundTint="#FFFFFF"
            android:text="Add Rental"
            android:textColor="#E2AC02"
            android:textSize="18sp"
            android:textStyle="bold"
            android:elevation="6dp"
            android:fontFamily="@font/proximanova_regular" />

        <Button
            android:id="@+id/buttonViewRentals"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginTop="12dp"
            android:backgroundTint="#FFFFFF"
            android:text="View Rentals"
            android:textColor="#E2AC02"
            android:textSize="18sp"
            android:textStyle="bold"
            android:elevation="6dp"
            android:fontFamily="@font/proximanova_regular" />

        <Button
            android:id="@+id/buttonUpdateRental"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginTop="12dp"
            android:backgroundTint="#FFFFFF"
            android:text="Update Rental"
            android:textColor="#E2AC02"
            android:textSize="18sp"
            android:textStyle="bold"
            android:elevation="6dp"
            android:fontFamily="@font/proximanova_regular" />

        <Button
            android:id="@+id/buttonDeleteRental"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginTop="12dp"
            android:backgroundTint="#FFFFFF"
            android:text="Delete Rental"
            android:textColor="#E2AC02"
            android:textSize="18sp"
            android:textStyle="bold"
            android:elevation="6dp"
            android:fontFamily="@font/proximanova_regular" />

        <Button
            android:id="@+id/buttonReports"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginTop="12dp"
            android:backgroundTint="#FFFFFF"
            android:text="Rental Reports"
            android:textColor="#E2AC02"
            android:textSize="18sp"
            android:textStyle="bold"
            android:elevation="6dp"
            android:fontFamily="@font/proximanova_regular" />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
