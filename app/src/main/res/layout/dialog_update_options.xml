<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/dialog_bg"
        android:padding="28dp"
        android:elevation="8dp">

        <TextView
            android:id="@+id/textViewDialogTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/title_edit_rental"
            android:textColor="#0085a4"
            android:textSize="22sp"
            android:textStyle="bold"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="20dp" />

        <Spinner
            android:id="@+id/spinnerCategory"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginTop="8dp"
            android:paddingStart="8dp"
            android:paddingEnd="8dp" />

        <Spinner
            android:id="@+id/spinnerItemName"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginTop="8dp"
            android:paddingStart="8dp"
            android:paddingEnd="8dp" />

        <EditText
            android:id="@+id/editRenterFName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/hint_renter_first_name"
            android:inputType="textPersonName"
            android:autofillHints="name"
            android:minHeight="48dp"
            android:padding="8dp"
            android:layout_marginTop="8dp" />

        <EditText
            android:id="@+id/editRenterLName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/hint_renter_last_name"
            android:inputType="textPersonName"
            android:autofillHints="name"
            android:minHeight="48dp"
            android:padding="8dp"
            android:layout_marginTop="8dp" />

        <EditText
            android:id="@+id/editRentalDate"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:hint="@string/hint_rental_date"
            android:focusable="true"
            android:focusableInTouchMode="false"
            android:clickable="true"
            android:inputType="date"
            android:autofillHints="none"
            android:layout_marginTop="8dp"
            android:paddingStart="8dp"
            android:paddingEnd="8dp" />

        <EditText
            android:id="@+id/editReturnDate"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:hint="@string/hint_return_date"
            android:focusable="true"
            android:focusableInTouchMode="false"
            android:clickable="true"
            android:inputType="date"
            android:autofillHints="none"
            android:layout_marginTop="8dp"
            android:paddingStart="8dp"
            android:paddingEnd="8dp" />

        <EditText
            android:id="@+id/editPrice"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/hint_price"
            android:inputType="numberDecimal"
            android:autofillHints="none"
            android:minHeight="48dp"
            android:padding="8dp"
            android:layout_marginTop="8dp" />

        <EditText
            android:id="@+id/editAddress"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/hint_address"
            android:inputType="textPostalAddress"
            android:autofillHints="postalAddress"
            android:minHeight="48dp"
            android:padding="8dp"
            android:layout_marginTop="8dp" />

        <Spinner
            android:id="@+id/spinnerStatus"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginTop="8dp"
            android:paddingStart="8dp"
            android:paddingEnd="8dp" />

        <EditText
            android:id="@+id/editNotes"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/hint_notes"
            android:minLines="3"
            android:gravity="top"
            android:inputType="textMultiLine"
            android:autofillHints="none"
            android:minHeight="48dp"
            android:padding="8dp"
            android:layout_marginTop="8dp" />

        <Button
            android:id="@+id/buttonSaveEdit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:backgroundTint="#ffe401"
            android:elevation="2dp"
            android:letterSpacing="0.05"
            android:text="@string/button_save_changes"
            android:textColor="#FFFFFF"
            android:textStyle="bold" />
    </LinearLayout>
</ScrollView>
