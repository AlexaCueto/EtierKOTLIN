<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_reports"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="24dp"
    android:background="@drawable/bg_profile"
    tools:context=".ReportsActivity">

    <ImageView
        android:id="@+id/imageViewLogo"
        android:layout_width="220dp"
        android:layout_height="90dp"
        android:layout_marginTop="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/etier_logo_transparent" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/textViewReportTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Rental Reports"
        android:textSize="24sp"
        android:textColor="#0085A4"
        app:layout_constraintTop_toBottomOf="@id/imageViewLogo"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp"
        android:gravity="center_horizontal"/>

        <LinearLayout
            android:id="@+id/summaryContainer"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/rounded_container"
            android:padding="24dp"
            app:layout_constraintTop_toBottomOf="@id/textViewReportTitle"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="24dp">

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/textTotalRentals"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Total Rentals: 0"
                android:textColor="#0085A4"
                android:textSize="16sp"
                android:fontFamily="@font/proximanova_regular"
                android:textStyle="bold"/>

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/textTotalRevenue"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Total Revenue: â‚±0.00"
                android:textColor="#0085A4"
                android:textSize="16sp"
                android:layout_marginTop="12dp"
                android:fontFamily="@font/proximanova_regular"
                android:textStyle="bold"/>

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/textMostRentedCategory"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Most Rented Category: None"
                android:textColor="#0085A4"
                android:textSize="16sp"
                android:layout_marginTop="12dp"
                android:fontFamily="@font/proximanova_regular"
                android:textStyle="bold"/>
        </LinearLayout>

        <com.github.mikephil.charting.charts.PieChart
            android:id="@+id/pieChart"
            android:layout_width="0dp"
            android:layout_height="250dp"
            android:layout_marginTop="16dp"
            android:padding="8dp"
            app:layout_constraintTop_toBottomOf="@id/summaryContainer"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

    <Button
        android:id="@+id/buttonBack"
        android:layout_width="200dp"
        android:layout_height="48dp"
        android:text="@string/button_back"
        android:textAllCaps="false"
        android:textSize="16sp"
        android:textColor="#e2ac02"
        android:textStyle="bold"
        android:fontFamily="@font/proximanova_regular"
        android:backgroundTint="#FFFFFF"
        android:elevation="4dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginBottom="16dp"
        style="?android:attr/buttonBarButtonStyle"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
