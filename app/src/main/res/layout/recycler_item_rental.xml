<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:fillViewport="true"
    android:padding="8dp"
    android:background="@drawable/edittext_bg"
    android:layout_marginBottom="8dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/rounded_container"
        android:padding="12dp">

        <!-- Renter ID at the top -->
        <TextView
            android:id="@+id/textRenterId"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Renter ID"
            android:textSize="14sp"
            android:textStyle="bold" />

        <!-- Horizontal container for image and details -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="179dp"
            android:layout_marginTop="8dp"
            android:orientation="horizontal">

            <!-- Item Image on the left -->
            <ImageView
                android:id="@+id/imageApparel"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:background="#cccccc"
                android:contentDescription="@string/content_desc_item_image"
                android:scaleType="centerCrop" />

            <!-- Details on the right -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textItemName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/text_item_name"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/textCategory"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:text="@string/text_category"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/textRenterName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:text="@string/text_renter_name"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/textRentalDates"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:text="@string/text_rental_dates"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/textStatus"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:text="@string/text_status"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/textNotes"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:text="@string/text_notes"
                    android:textSize="14sp" />
            </LinearLayout>
        </LinearLayout>

        <!-- Single Action Button -->
        <Button
            android:id="@+id/btnUpdateOrDelete"
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:layout_gravity="end"
            android:text="@string/button_action"
            android:textSize="12sp"
            android:paddingStart="12dp"
            android:paddingEnd="12dp"
            android:backgroundTint="#E2AC02"
            android:textColor="#ffffff"
            android:layout_marginTop="8dp" />
    </LinearLayout>
</ScrollView>
