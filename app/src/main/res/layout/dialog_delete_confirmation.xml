<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/rounded_container"
    android:padding="28dp"
    android:elevation="8dp">

    <TextView
        android:id="@+id/textViewDialogTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/title_confirm_delete"
        android:textColor="#E2AC02"
        android:textSize="22sp"
        android:textStyle="bold"
        android:fontFamily="@font/proximanova_regular"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="16dp"
        android:letterSpacing="0.03" />

    <TextView
        android:id="@+id/textViewDialogMessage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/message_confirm_delete"
        android:textColor="#444444"
        android:textSize="16sp"
        android:fontFamily="@font/proximanova_regular"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="24dp"
        android:letterSpacing="0.01" />

    <Button
        android:id="@+id/buttonConfirmDelete"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/button_yes"
        android:backgroundTint="#E2AC02"
        android:textColor="#FFFFFF"
        android:textStyle="bold"
        android:fontFamily="@font/proximanova_regular"
        android:letterSpacing="0.04"
        android:elevation="4dp"
        android:layout_marginBottom="12dp" />

    <Button
        android:id="@+id/buttonCancelDelete"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/button_no"
        android:backgroundTint="#FFFFFF"
        android:textColor="#E2AC02"
        android:textStyle="bold"
        android:fontFamily="@font/proximanova_regular"
        android:letterSpacing="0.04"
        android:elevation="4dp" />
</LinearLayout>
